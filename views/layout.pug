doctype html
html
  head
    title The Comment Club
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      div.px-3.py-2.header
        div.container-div
          div.logo-header-div
            div.header-left
              a(href='/')
                div.logo-text-div
                  a(href='/').me-lg-auto.text-decoration-none.logo-text-up CO
                  a(href='/').me-lg-auto.text-decoration-none.logo-text-down CL
                a.d-flex.align-items-center.my-lg-0.me-lg-auto.text-white.text-decoration-none.title-header(href='/') The Comment Club

            if !user
              div.header-right
                ul.nav.col-lg-auto.justify-content-center.my-md-0.text-small.nav-right
                  li.nav-link.text-white.header-btn
                    a(href='/auth/log-in')
                      span.nav-text.header-btn Log in
                  li.nav-link.text-white.header-btn
                    a(href='/auth/sign-up')
                      span.nav-text.header-btn Sign up
            else 
              div.header-right
                ul.nav.col-lg-auto.justify-content-center.my-md-0.text-small.nav-right
                  a.text-white.welcome-txt(href="/users/profile") Welcome, #{user.name}
                  li.nav-link.text-white
                    a(href="/users/comment/add")
                      span.nav-text.header-btn Add a comment
                  li.nav-link.text-white
                    a(href="/log-out")
                      span.nav-text.header-btn Log out

    div.content
      block content
